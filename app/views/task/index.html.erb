<h1>Index page</h1>

<table>
    <thead>
        <tr>
            <th>Task</th>
            <th>Comments</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td> <%= task.task %> </td>
            <td> <%= task.comments %> </td>
            <td> <%= link_to  "Delete", task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
            <td> <%= link_to  "Show", task_path(task.id) %> </td>
            <td> <%= link_to  "Edit", edit_task_path(task.id) %> </td>
        </tr>
        <% end %>
    </tbody>
</table>
<hr>
<%= link_to  "Create a new Task", new_task_path %>
<p></p>
<%= link_to  "Go to Home page", "/" %>