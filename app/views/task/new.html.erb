<h1 class="header-index">Create a new Task</h1>

<%= render 'shared/error_messages', obj:@task %>
<div class="form">
    <%= form_with scope: :task, url: '/task', local: true, class:"my-form" do |f| %>
    <p>
        <%= f.label :task, class:"label" %>
        <%= f.text_field :task, class:"field" %>
    </p>

    <p>
        <%= f.label :comments, class:"label" %>
        <%= f.text_area :comments, class:"field" %>
    </p>
    <%= f.submit "Create Task", disable_with: 'Creating...', class:"btn-this-app" %>

    <% end %>
</div>

<hr>

<div class="my-link">
    <%= link_to  "Go Back", task_index_path, class:"btn-this-app" %> 
</div>