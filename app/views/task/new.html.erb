<h1>NEW TASK</h1>

<%= form_with scope: :task, url: '/task', local: true do |f| %>

    <p>
        <%= f.label :task %><br />
        <%= f.text_field :task %>
    </p>

    <p>
        <%= f.label :comments %><br />
        <%= f.text_area :comments %>
    </p>
    <%= f.submit "Create Task", disable_with: 'Creating...' %>

<% end %>