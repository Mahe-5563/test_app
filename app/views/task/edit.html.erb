<h1>Edit Task</h1>

<%= render 'error_messages' %>
<%= form_with(model: @task, local: true) do |f| %>
<p>
    <%= f.label :task %><br />
    <%= f.text_field :task %>
</p>

<p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
</p>
<%= f.submit "Create Task", disable_with: 'Creating...' %>

<% end %>

<p>
<%= link_to  "Go Back", "/task" %>
</p>