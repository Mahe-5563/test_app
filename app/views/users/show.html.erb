<div class="show-tasks">
    <% flash.each do |name, msg| %>
    <p class="flash-message">
        <%= msg %>
    </p>
    <% end %>

    <h1 class="header-index"><%= @user.username %>'s profile</h1>

    <div class="task-comments">
        <p>
            <span class="head">User name:</span> 
            <span class="content"><%= @user.username %></span>
        </p>
        <p>
            <span class="head">Email ID:</span> 
            <span class="content"><%= @user.email %></span>
        </p>
        <p>
            <span class="head">Account Created On:</span> 
            <span class="content">
                <%= @user.created_at.day %> -
                <%= @user.created_at.month %> -
                <%= @user.created_at.year %>
            </span>
        </p>
    </div>

    <%= render 'shared/tasks_table' %>

    <p class="quick-links">
        <% if @user.id == current_user.id || current_user.admin? %>
            <%= link_to  "Edit Me", edit_user_path(@user.id), class:"edit" %> |
        <% end %>
        <% if @user.id == current_user.id || current_user.admin? %>
            <%= link_to  "Delete Me", 
                user_path(@user.id), 
                class:"delete", 
                method: :delete, 
                data: { confirm: 'Are you sure you want to delete this account?' }
            %> |
        <% end %>
        <%= link_to  "Go Back", '/task', class:"back" %>
    </p>
</div>