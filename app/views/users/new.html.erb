<h1 class="header-index">Signup Users</h1>

<%= render 'shared/error_messages', obj:@user %>
<div class="form">
    <%= form_with scope: :user, url: '/users', local: true, class:"my-form" do |f| %>
    <p>
        <%= f.label :username, class:"label" %>
        <%= f.text_field :username, class:"field" %>
    </p>

    <p>
        <%= f.label :email, class:"label" %>
        <%= f.email_field :email, class:"field" %>
    </p>

    <p>
        <%= f.label :password, class:"label" %>
        <%= f.password_field :password, class:"field" %>
    </p>
    <%= f.submit "Create User", disable_with: 'Creating...', class:"btn-this-app" %>

    <% end %>
</div>